print("Hello! Welcome to the Computer Quiz.\n\n\nKindly select one of the corect answers. Each answer carries one mark!\n\n\n");

playing = input("Do you want to play? yes/no  ");

if playing.lower() != "yes":

     print("Your are the Boss!Come back whenever you feel like it!"); 
     quit()

else :
    print("\n\nOkay! Let's play\n\n");
    point = 0;
  
    question = input("What is the big screen called?\n\na) monitor\nb) screen\nc) TV\nd) led \n\n");
    if question.lower() == "a":
      print("\n\nCorrect Answer!\n\n");
      point = point+1;
    else:
          print("\n\nIncorrect Answer!\n\n");
          #point =-1;

    question = input("What component is used for Graphics Processing?\n\na) CPU\nb) GPU\nc) PSU\nd) RAM \n\n");
    if question.lower() == "b":
          print("\n\nCorrect Answer!\n\n");
          point =point+1;
    else:
          print("\n\nIncorrect Answer!\n\n");
          #point =-1;
          
    question = input("What does RAM stand for?\n\na) Random Arbitray Memory\nb) Readable Accessible Memory\nc) Readable Auxiliary Memory\nd) Random Access Memory \n\n");
    if question.lower() == "d":
          print("\n\nCorrect Answer!\n\n");
          point =point+1;
    else:
          print("\n\nIncorrect Answer!\n\n");
          #point =-1;

    question = input("What is the hardware with keys called?\n\na) AlphaBoard\nb) KeyPad\nc) Keyboard\nd) Touchpad \n\n");
    if question.lower() == "c":
          print("\n\nCorrect Answer!\n\n");
          point =point+1;
    else:
          print("\n\nIncorrect Answer!\n\n");
          #point =-1;

    question = input("What is the brain of computer?\n\na) GPU\nb) CPU\nc) Mouse\nd) RAM \n\n");
    if question.lower() == "b":
          print("\n\nCorrect Answer!\n\n");
          point =point+1;
    else:
          print("\n\nIncorrect Answer!\n\n");
          #point =-1;


    print("\n\nCongragulations for Completing the test!\n\n");
    print("\n\nYour final Score is: ", point ," / 5");

    match point:
      case 1:
        print("\n\nIt's a learning Process!\n\n")
      case 2:
        print("\n\nKeep practicing, you're getting there!\n\n")
      case 3:
        print("\n\nGood job! You're improving.\n\n")
      case 4:
        print("\n\nGreat work! Almost perfect.\n\n")
      case 5:
        print("\n\nExcellent! You aced the quiz!\n\n")
      case _:  # Default case for any other score
        print("\n\nKeep learning and try again!\n\n")
